					</div>
				</div>
			</div>
		{% endblock %}
		
{% block body %}
	<div class="service-list-wrap">
		{% for categorie in categories %}
			<a class="service-card" href="{{path('detailService',{id : categorie.id})}}">
				<h3>{{categorie.nom}}</h3>
				<img src="{{asset ('images/service-kine.jpg')}}" alt="photo service">
			</a>
		{% endfor %}
	</div>
{% endblock %}
