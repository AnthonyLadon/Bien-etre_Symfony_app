{% extends 'base.html.twig' %}

{% block title %}
  ajout promotion
{% endblock %}

{% block titreh1 %}
  <h1>
    Ajouter une promotion
  </h1>
{% endblock %}

{% block searchForm %}
  {% embed '_searchFormToggle.html.twig' %}

  {% endembed %}
{% endblock %}

{% block body %}
  <a class="back-to-prestataire-detail"
    href="{{
    path(
      'profil_prest',
      {
        id: app.user.prestataire.id
      }
    )
    }}">
    retour sur ma page de profil
  </a>
  {{ form_start(form) }}
  <div class="form-register">
    <div class="form-register-input">
      {{ form_label(form.nom) }}
      {{ form_widget(form.nom) }}
    </div>
    <div class="form-register-input">
      {{ form_label(form.description) }}
      {{ form_widget(form.description) }}
    </div>
    <div class="form-register-input">
      {{ form_label(form.categorieService) }}
      {{ form_widget(form.categorieService) }}
    </div>
    <div class="form-register-input-date">
      {{ form_label(form.debut) }}
      {{ form_widget(form.debut) }}
    </div>
    <div class="form-register-input-date">
      {{ form_label(form.fin) }}
      {{ form_widget(form.fin) }}
    </div>
    <div class="form-register-input-date">
      {{ form_label(form.affichageDe) }}
      {{ form_widget(form.affichageDe) }}
    </div>
    <div class="form-register-input-date">
      {{ form_label(form.affichageJusque) }}
      {{ form_widget(form.affichageJusque) }}
    </div>
    {{ form_widget(form.enregistrer,{'attr': {'class': 'register-form-submit'}}) }}
  </div>
  {{ form_end(form) }}
{% endblock %}
