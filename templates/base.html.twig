<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset ('css/screen.css')}}">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css"/>
		{% endblock %}
	</head>
	<header>
		{% block nav %}
			<div class="hamburger-icon" id="icon">
				<div class="icon-1" id="a"></div>
				<div class="icon-2" id="b"></div>
				<div class="icon-3" id="c"></div>
				<div class="clear"></div>
			</div>
			<div class="wrap-menu">
				<nav class="l-main-nav" id="nav">
					<ul>
						<li><a id="home"href="{{path('home')}}">Home</a></li>
						<li><a href="#">à propos</a></li>
						<li><a href="#">partenaires</a></li>
						<li><a href="#">par région</a></li>
						<li><a href="#">stages</a></li>
						<li><a href="#">contact</a></li>
					</ul>
				</nav>
				<div class="dark-pink" id="pink"></div>
				<div class='l-main-logo'>
					<a href="{{path ('home')}}"><img src="{{asset ('images/main-logo.png')}}" alt="image-logo"></a>
				</div>
			</div>
		{% endblock %}

		<div class="ease-in-title"> {% block titreh1 %}{% endblock %}

			</div>
		</header>
		<body></body>
	</html>
</div>
<div class="l-main-wrap"> {% block body %}{% endblock %}
	</div>
	{% block footer %}
		<footer class="l-footer">
			<p>Affichage des reseaux sociaux (footer) + crédits et copyright</p>
		</footer>
	{% endblock %}
	{% block javascripts %}
		<script src="{{asset ('js/main.js')}}"></script>
	{% endblock %}
</body></html>
