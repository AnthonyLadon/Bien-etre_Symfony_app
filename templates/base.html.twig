<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset ('css/screen.css')}}">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		{% endblock %}

	</head>
	<body>
		<div class="l-background-image-wrap">
			<header>
				{% block nav %}
					<div class="l-main-header-wrap">
						<div class="hamburger-icon" id="icon">
							<div class="icon-1" id="a"></div>
							<div class="icon-2" id="b"></div>
							<div class="icon-3" id="c"></div>
							<div class="clear"></div>
						</div>
						<div class="wrap-menu">
							<nav class="l-main-nav" id="nav">
								<ul>
									<li><a id="home"href="{{path('home')}}"><i class="fa-solid fa-house"></i>&nbsp;Accueil</a></li>
									<li><a id="partenaires"href="{{path ("listePartenaires")}}"><i class="fa-solid fa-handshake-simple"></i>&nbsp;Partenaires</a></li>
									<li><a id="services"href="{{path ("listeServices")}}"><i class="fa-solid fa-bell-concierge"></i>&nbsp;Services</a></li>
									<li><a id="services"href="{{path ("listeStages")}}"><i class="fa-solid fa-person-chalkboard"></i>&nbsp;Stages</a></li>
									<li><a href="#"><i class="fa-solid fa-user"></i>&nbsp;Se Connecter</a></li>
								</ul>
							</nav>
							<div class="dark-pink" id="pink"></div>

							<div class="main-search-bar-wrap">

								{{ form_start(form) }}
								
									{{ form_row(form.prestataire, {
										'attr': {'class': 'main-search-input'},
										'label': 'Prestataire', 
										'label_attr': {'class': 'main-search-label'}}) 
									}}

									{{ form_row(form.categorie, {
										'attr': {'class': 'main-search-input'},
										'label': 'Catégorie',
										'label_attr': {'class': 'main-search-label'}}) 
									}}

									{{ form_row(form.localite, {
										'attr': {'class': 'main-search-input'},
										'label': 'Localité',
										'label_attr': {'class': 'main-search-label'}}) 
									}}

									{{ form_row(form.cp, {
										'attr': {'class': 'main-search-input'},
										'label': 'Code Postal',
										'label_attr': {'class': 'main-search-label'}}) 
										}}

									{{ form_row(form.commune, {
										'attr': {'class': 'main-search-input'},
										'label': 'Commune',
										'label_attr': {'class': 'main-search-label'}}) 
										}}

									{{ form_row(form.recherche, {
										'attr': {'class': 'main-search-button'}
									}) }}

								{{ form_end(form) }}
	
							</div>
						</div>
					</div>
					<div class='l-main-logo'>
						<a href="{{path ('home')}}"><img src="{{asset ('images/logo.png')}}" alt="image-logo"></a>
					</div>
				</div>
			</div>
		{% endblock %}

		<div class="ease-in-title">
			{% block titreh1 %}
				<div class="ease-in-title"></div>
			{% endblock %}
		</div>
	</body>
		</header><div class="l-main-wrap"> {% block body %}{% endblock %}
		</div>
		{% block footer %}
			<footer class="l-footer">
				<div class="l-footer-links">
					<a href="#">à propos</a>
					<a href="#">contact</a>
				</div>
				<div class="footer-social">
					<a href="#">
						<i class="fa-brands fa-facebook"></i>
					</a>
					<a href="#">
						<i class="fa-brands fa-square-instagram"></i>
					</a>
					<a href="#">
						<i class="fa-brands fa-twitter"></i>
					</a>
					<a href="#">
						<i class="fa-brands fa-youtube"></i>
					</a>
				<div class="footer-copyright">
					<p>2023 A.L. all rights reserved</p>
				</div>
			</footer>
		{% endblock %}
		{% block javascript %}
			<script src="{{asset ('js/main.js')}}"></script>
		{% endblock %}
	</body>
</html>
